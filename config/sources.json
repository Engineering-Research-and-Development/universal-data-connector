{
  "sources": [
    {
      "id": "modbus-server-local",
      "name": "Modbus TCP Server Local",
      "type": "modbus",
      "enabled": true,
      "autoMapping": true,
      "config": {
        "connectionType": "tcp",
        "host": "127.0.0.1",
        "port": 502,
        "unitId": 1,
        "timeout": 10000,
        "discoveryRanges": {
          "holdingRegisters": {
            "start": 0,
            "count": 15
          },
          "inputRegisters": {
            "start": 0,
            "count": 15
          },
          "coils": {
            "start": 0,
            "count": 10
          },
          "discreteInputs": {
            "start": 0,
            "count": 10
          }
        }
      },
      "pollInterval": 3000
    }
  ]
}